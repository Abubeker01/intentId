{
  "manifest_version": 3,
  "name": "IntentID",
  "version": "1.0.0",
  "description": "Intent-based identity & access extension for Web3",
  "permissions": ["storage", "activeTab", "scripting"],
  "background": {
    "service_worker": "background/index.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/index.js"]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "public/icon.png"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 