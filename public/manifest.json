{
  "manifest_version": 3,
  "name": "IntentID",
  "version": "1.0.0",
  "description": "IntentID Chrome Extension",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background/index.js",
    "type": "module"
  },
  "content_scripts": [
  {
  "matches": ["http://*/*", "https://*/*"],
  "js": ["content/index.js"],
  "run_at": "document_idle",
  "all_frames": true
}
],
  "web_accessible_resources": [
    {
      "resources": ["content/index.js", "inpage.js"],
      "matches": ["http://*/*", "https://*/*"]
    }
  ]
} 